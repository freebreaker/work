type AdminUser @db(name:"db_adminuser") {
    id:Int! @id
    # 用户名
    name: String
    # 密码
    pwd:String
    # 创建日期
    createdAt: DateTime! @createdAt
    # 更新日期
    lastLoginAt:DateTime! @updatedAt
    posts: [Post!]!
}

type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  title: String!
  published: Boolean! @default(value: false)
  author: AdminUser!
}